.search-form
	margin 20px 0
	width 100%
	
	> .input
		height 50px
		width 100%
		text-align center
		font-size rem(18px)
		color darken($gray-color, 40%)
		background darken($gray-color, 10%)
		border-radius 6px
		border none
		outline none
		
		&:focus
			background darken($gray-color, 15%)
			transition 0.4s
			